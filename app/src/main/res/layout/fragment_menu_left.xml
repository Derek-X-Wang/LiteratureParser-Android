<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_tmp"
        android:layout_weight="3"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|bottom">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pg_launcher2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UCSB Student"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tab_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_zero"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_file_upload_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_zero"
                android:text="Upload"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_coupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_one"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_search_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_one"
                android:text="Search"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a3a3a3"
            android:layout_margin="5dp"
            />



        <RelativeLayout
            android:id="@+id/tab_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_two"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_insert_drive_file_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_two"
                android:text="PDF"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_three"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_assessment_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_three"
                android:text="Summary"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_summary_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_four"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_assessment_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_four"
                android:text="Summary(pages)"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_summary_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_seven"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_assessment_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_seven"
                android:text="demo"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a3a3a3"
            android:layout_margin="5dp"
            />

        <RelativeLayout
            android:id="@+id/tab_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_five"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_build_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_five"
                android:text="Setting"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_six"
                android:layout_width="@dimen/menu_left_tab_icon"
                android:layout_height="@dimen/menu_left_tab_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_help_outline_grey_500_36dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_six"
                android:text="Feedback"
                android:textColor="@color/left_meun_text_color"
                android:textSize="@dimen/menu_left_tab_text" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>